<h2 style="margin-top: 0px">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control", style:"max-width:300px; margin-bottom:20px"  %></div>

  <div><%= f.label "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", style:"max-width:300px; margin-bottom:20px"  %></div>

  <div><%= f.label "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style:"max-width:300px; margin-bottom:20px"  %></div>

  <div><%= f.submit "Зарегистрироваться", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
